<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/member_from"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/login_qq" />

        <TextView
            android:id="@+id/member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/member_from"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/member_from"
            android:text="用户名称"
            android:textColor="@color/launch_btn_text"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/member_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/member_name"
            android:layout_alignParentRight="true"
            android:text="在线"
            android:textColor="@color/launch_btn_text"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>